{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build && cd .. && mkdir -p public && cp -r client/build/* public/ && echo 'Build completed successfully'",
  "outputDirectory": "public",
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/index.js"
    },
    {
      "src": "/login",
      "dest": "/index.js"
    },
    {
      "src": "/callback",
      "dest": "/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ]
}